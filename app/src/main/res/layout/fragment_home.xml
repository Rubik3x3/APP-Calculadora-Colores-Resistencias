<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/texto_resultados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultados"
            android:layout_marginLeft="5dp"
            android:textSize="24dp"
            android:textColor="#505050"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/texto_resultados2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultados"
            android:layout_marginLeft="5dp"
            android:textColor="#505050"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/texto_resultados3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultados"
            android:layout_marginLeft="5dp"
            android:textColor="#505050"
            android:layout_marginBottom="5dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/text_cantidadBandas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_baseline_electric_bolt_24"
            android:drawablePadding="5dp"
            android:text="Cantidad de bandas:"
            android:textColor="#353535"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinerCantidadBandas"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:minHeight="48dp"
            android:textAlignment="center"
            tools:ignore="SpeakableTextPresentCheck" />

        <View
            android:id="@+id/view_azul"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#4183E4"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/text_banda1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/ic_baseline_color_lens_24"
            android:drawablePadding="5dp"
            android:text="1ra banda de color"
            android:textColor="#353535"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinerBanda1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />


        <TextView
            android:id="@+id/text_banda2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/ic_baseline_color_lens_24"
            android:drawablePadding="5dp"
            android:text="2da banda de color"
            android:textColor="#353535"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinerBanda2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/text_banda3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/ic_baseline_color_lens_24"
            android:drawablePadding="5dp"
            android:text="3ra banda de color"
            android:textColor="#353535"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinerBanda3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/text_multiplicador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/ic_baseline_account_tree_24"
            android:drawablePadding="5dp"
            android:text="Multiplicador"
            android:textColor="#353535"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinerMultiplicador"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/text_tolerancia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/ic_baseline_bar_chart_24"
            android:drawablePadding="5dp"
            android:text="Tolerancia"
            android:textColor="#353535"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinerTolerancia"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/text_PPM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/ic_baseline_apps_24"
            android:drawablePadding="5dp"
            android:text="PPM"
            android:textColor="#353535"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinerPPM"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <Button
        android:id="@+id/botonCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"

        android:background="@drawable/estilo_boton_calcular_todo"/>

    <Button
        android:id="@+id/botonVolver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver a calcular"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"

        android:background="@drawable/estilo_boton_calcular2"/>

</androidx.constraintlayout.widget.ConstraintLayout>